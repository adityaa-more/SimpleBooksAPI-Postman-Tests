		{
			"name": "Books",
			"item": [
				{
					"name": "List of books",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", () => {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"const response = pm.response.json();\r",
									"const availBookList = response.filter((book) => book.available === true);\r",
									"const book = availBookList[0];\r",
									"\r",
									"if (book) {\r",
									"    pm.environment.set(\"bookId\", book.id);\r",
									"}\r",
									"\r",
									"pm.test(\"Book is available\", () => {\r",
									"    pm.expect(book).to.be.an('object');\r",
									"    pm.expect(book.available).to.be.true;\r",
									"    pm.expect(book.type).to.be.oneOf([\"non-fiction\" , \"fiction\"]);\r",
									"});\r",
									"\r",
									"\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseURL}}/books?type=fiction&limit=10",
							"host": [
								"{{baseURL}}"
							],
							"path": [
								"books"
							],
							"query": [
								{
									"key": "type",
